<section id="home" class="min-h-screen flex items-center justify-center relative pt-16">
  <div class="absolute inset-0 bg-gradient-to-br from-natural-beige/70 to-natural-light-green/60 z-10"></div>
  <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('https://images.unsplash.com/photo-1497032628192-86f99bcd76bc?w=1920&h=1080&fit=crop&crop=center')"></div>
  <div class="section-padding py-20 text-center relative z-20">
    <div class="fade-in">
      <div class="mb-6 flex justify-center">
        <img 
          src="/images/logo/1x/logomark_white.png" 
          alt="Wells合同会社ロゴ" 
          class="h-16 md:h-20 w-auto drop-shadow-2xl"
          srcset="/images/logo/1x/logomark_white.png 1x, /images/logo/2x/logomark_white@2x.png 2x, /images/logo/4x/logomark_white@4x.png 4x"
        />
      </div>
      <h1 class="text-5xl md:text-7xl font-sans font-black text-white mb-6 drop-shadow-2xl tracking-tight">
        Wells合同会社
      </h1>
      <p class="text-xl md:text-2xl text-white mb-4 font-bold drop-shadow-xl tracking-wide">
        システム開発とハンドメイドで
      </p>
      <p class="text-xl md:text-2xl text-white mb-12 font-bold drop-shadow-xl tracking-wide">
        あなたの「想い」をカタチにします
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#services" class="inline-block bg-natural-green text-white px-8 py-4 rounded-full hover:bg-natural-light-green transition-colors font-medium shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all">
          システム開発を見る
        </a>
        <a href="#handmade" class="inline-block bg-vibrant-orange text-white px-8 py-4 rounded-full hover:bg-light-orange transition-colors font-medium shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all">
          ハンドメイド作品を見る
        </a>
      </div>
    </div>
    
    <div class="mt-16 animate-bounce">
      <svg class="w-6 h-6 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>