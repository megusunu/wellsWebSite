// 現在選択中のインデックス（変更したい場合はここを変更）
const selectedIndex = 0;
---

<!-- 画像選択プレビュー（開発時のみ表示） -->
<div class="fixed bottom-4 right-4 bg-white rounded-lg shadow-lg p-4 max-w-xs z-50 hidden">
  <h3 class="font-bold mb-2">背景画像の候補</h3>
  <div class="space-y-2">
    {imageOptions.map((option, index) => (
      <div class="flex items-center space-x-2">
        <input type="radio" name="bgImage" value={index} checked={index === selectedIndex} />
        <label class="text-sm">{option.description}</label>
      </div>
    ))}
  </div>
  <p class="text-xs text-gray-500 mt-2">
    選択した画像のURLをHero.astroに適用してください
  </p>
</div>

<!-- 実際に使用する画像URLを出力 -->
<script define:vars={{ selectedUrl: imageOptions[selectedIndex].url }}>
  console.log('Selected Hero Background Image:', selectedUrl);
</script>