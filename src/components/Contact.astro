---

<section id="contact" class="py-20 bg-white">
  <div class="section-padding">
    <div class="text-center mb-16 fade-in">
      <h2 class="text-4xl md:text-5xl font-sans font-black text-natural-green mb-4">
        お問い合わせ
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        システム開発、ハンドメイド作品のオーダーなど、お気軽にお問い合わせください
      </p>
    </div>
    
    <div class="max-w-3xl mx-auto">
      <form class="bg-natural-beige/20 rounded-2xl p-8 md:p-12 fade-in">
        <div class="grid md:grid-cols-2 gap-6 mb-6">
          <div>
            <label for="name" class="block text-gray-700 font-medium mb-2">
              お名前 <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-natural-green focus:ring-2 focus:ring-natural-light-green/50 transition-colors"
              placeholder="山田 太郎"
            />
          </div>
          
          <div>
            <label for="email" class="block text-gray-700 font-medium mb-2">
              メールアドレス <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-natural-green focus:ring-2 focus:ring-natural-light-green/50 transition-colors"
              placeholder="example@email.com"
            />
          </div>
        </div>
        
        <div class="mb-6">
          <label for="subject" class="block text-gray-700 font-medium mb-2">
            お問い合わせ種別 <span class="text-red-500">*</span>
          </label>
          <select
            id="subject"
            name="subject"
            required
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-natural-green focus:ring-2 focus:ring-natural-light-green/50 transition-colors"
          >
            <option value="">選択してください</option>
            <option value="development">システム開発のお問い合わせ</option>
            <option value="consulting">技術サポート</option>
            <option value="handmade">ハンドメイド作品・オーダー</option>
            <option value="workshop">ワークショップ・イベント企画</option>
            <option value="collaboration">コラボレーションのご提案</option>
            <option value="other">その他</option>
          </select>
        </div>
        
        <div class="mb-6">
          <label for="message" class="block text-gray-700 font-medium mb-2">
            お問い合わせ内容 <span class="text-red-500">*</span>
          </label>
          <textarea
            id="message"
            name="message"
            rows="6"
            required
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-natural-green focus:ring-2 focus:ring-natural-light-green/50 transition-colors resize-none"
            placeholder="お問い合わせ内容をご記入ください"
          ></textarea>
        </div>
        
        <div class="text-center">
          <button
            type="submit"
            aria-describedby="submit-status"
            class="bg-natural-green text-white px-8 py-4 rounded-full hover:bg-vibrant-orange transition-colors font-medium shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all border-2 border-transparent hover:border-vibrant-orange"
          >
            送信する
          </button>
        </div>
        
        <div id="submit-status" class="text-center text-sm" role="status" aria-live="polite"></div>
        </div>
        
        <div class="text-center mt-6">
          <p class="text-sm text-gray-600 mb-3">
            ※ 通常2〜3営業日以内にご返信いたします
          </p>
          <p class="text-xs text-gray-500">
            「目先がどんどん変わるプロジェクト」でも柔軟に対応いたします。お気軽にお問い合わせください。
          </p>
        </div>
      </form>
    </div>
  </div>
</section>

<script>
  const form = document.querySelector('form');
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    // フォームデータを取得
    const formData = new FormData(form);
    const name = formData.get('name');
    const email = formData.get('email');
    const subject = formData.get('subject');
    const message = formData.get('message');
    
    // お問い合わせ種別の日本語表示
    const subjectLabels: Record<string, string> = {
      'development': 'システム開発のお問い合わせ',
      'consulting': '技術サポート',
      'handmade': 'ハンドメイド作品・オーダー',
      'workshop': 'ワークショップ・イベント企画',
      'collaboration': 'コラボレーションのご提案',
      'other': 'その他'
    };
    
    const subjectStr = String(subject);
    const subjectLabel = subjectLabels[subjectStr] || subjectStr;
    
    // メール本文を作成
    const emailBody = `
お名前: ${name}
メールアドレス: ${email}
お問い合わせ種別: ${subjectLabel}

お問い合わせ内容:
${message}

---
このメールはWells合同会社のお問い合わせフォームから送信されました。
    `.trim();
    
    // mailto URLを作成
    const mailtoUrl = `mailto:megumi.kusama@wells.jp?subject=${encodeURIComponent(`【${subjectLabel}】 ${name}様からのお問い合わせ`)}&body=${encodeURIComponent(emailBody)}`;
    
    // メールクライアントを開く
    window.location.href = mailtoUrl;
  });
</script>