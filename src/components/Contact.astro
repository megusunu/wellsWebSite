<section id="contact" class="py-20 bg-white">
  <div class="section-padding">
    <div class="text-center mb-16 fade-in">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-natural-green mb-4">
        お問い合わせ
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        システム開発のご相談、ハンドメイド作品のオーダーなど、お気軽にお問い合わせください
      </p>
    </div>
    
    <div class="max-w-3xl mx-auto">
      <form class="bg-natural-beige/20 rounded-2xl p-8 md:p-12 fade-in">
        <div class="grid md:grid-cols-2 gap-6 mb-6">
          <div>
            <label for="name" class="block text-gray-700 font-medium mb-2">
              お名前 <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-natural-green focus:ring-2 focus:ring-natural-light-green/50 transition-colors"
              placeholder="山田 太郎"
            />
          </div>
          
          <div>
            <label for="email" class="block text-gray-700 font-medium mb-2">
              メールアドレス <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-natural-green focus:ring-2 focus:ring-natural-light-green/50 transition-colors"
              placeholder="example@email.com"
            />
          </div>
        </div>
        
        <div class="mb-6">
          <label for="subject" class="block text-gray-700 font-medium mb-2">
            お問い合わせ種別 <span class="text-red-500">*</span>
          </label>
          <select
            id="subject"
            name="subject"
            required
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-natural-green focus:ring-2 focus:ring-natural-light-green/50 transition-colors"
          >
            <option value="">選択してください</option>
            <option value="development">システム開発のご相談</option>
            <option value="handmade">ハンドメイド作品について</option>
            <option value="other">その他</option>
          </select>
        </div>
        
        <div class="mb-6">
          <label for="message" class="block text-gray-700 font-medium mb-2">
            お問い合わせ内容 <span class="text-red-500">*</span>
          </label>
          <textarea
            id="message"
            name="message"
            rows="6"
            required
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-natural-green focus:ring-2 focus:ring-natural-light-green/50 transition-colors resize-none"
            placeholder="お問い合わせ内容をご記入ください"
          ></textarea>
        </div>
        
        <div class="text-center">
          <button
            type="submit"
            class="bg-natural-green text-white px-8 py-4 rounded-full hover:bg-natural-light-green transition-colors font-medium shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all"
          >
            送信する
          </button>
        </div>
        
        <p class="text-center text-sm text-gray-600 mt-6">
          ※ 通常2〜3営業日以内にご返信いたします
        </p>
      </form>
    </div>
  </div>
</section>

<script>
  const form = document.querySelector('form');
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    alert('お問い合わせフォームの実装が必要です。メール送信機能を追加してください。');
  });
</script>