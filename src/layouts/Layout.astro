---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

import { getAssetPath } from '../utils/paths';

const { title, description = 'Wells合同会社 - システム開発とハンドメイド小物販売' } = Astro.props;

// 環境変数から分析ツールの設定を取得
const ga4MeasurementId = import.meta.env.PUBLIC_GA4_MEASUREMENT_ID;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href={getAssetPath('/images/logo/1x/logomark.png')} />
    <link rel="apple-touch-icon" href={getAssetPath('/images/logo/1x/logomark.png')} />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Wells合同会社</title>
    
    <meta property="og:title" content={`${title} | Wells合同会社`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="ja_JP" />
    <meta property="og:image" content="/images/logo/1x/wellslogo.png" />
    <meta property="og:url" content="https://wells-llc.com" />
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Wells合同会社`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/images/logo/1x/wellslogo.png" />
    
    <!-- Google Analytics -->
    {ga4MeasurementId && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${ga4MeasurementId}`}></script>
        <script define:vars={{ ga4MeasurementId }}>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', ga4MeasurementId);
        </script>
      </>
    )}

    <!-- Structured Data: Organization -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Wells合同会社",
        "url": "https://wells.jp",
        "logo": "https://wells.jp/images/logo/1x/wellslogo.png",
        "foundingDate": "2023-10-05",
        "founder": {
          "@type": "Person",
          "name": "草間 恵"
        },
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "渋谷区",
          "addressRegion": "東京都",
          "addressCountry": "JP"
        },
        "sameAs": [
          "https://www.instagram.com/megusunu/",
          "https://x.com/megusunu"
        ],
        "description": "システム開発とハンドメイド小物販売を行う一人会社。AWS開発、モバイルアプリ開発、技術書執筆、手編みニットウェア制作を展開。"
      }
    </script>
  </head>
  <body class="bg-white min-h-screen">
    <slot />
  </body>
</html>

