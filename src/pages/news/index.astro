---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';
import { getBaseUrl } from '../../utils/paths';

const baseUrl = getBaseUrl();

// ニュース記事を取得して日付順にソート
const newsEntries = await getCollection('news', ({ data }) => {
  return data.draft !== true;
});

const sortedNews = newsEntries.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// カテゴリ別の色定義
const getCategoryColor = (category: string) => {
  const colors = {
    news: 'natural-green',
    blog: 'vibrant-orange', 
    project: 'natural-brown',
    event: 'warm-yellow',
    update: 'natural-light-green'
  };
  return colors[category as keyof typeof colors] || 'natural-green';
};

// カテゴリ別の日本語表示
const getCategoryLabel = (category: string) => {
  const labels = {
    news: 'ニュース',
    blog: 'コラム',
    project: 'プロジェクト',
    event: 'イベント',
    update: 'アップデート'
  };
  return labels[category as keyof typeof labels] || category;
};
---

<Layout title="お知らせ・更新情報" description="Wells合同会社の最新ニュース、技術情報、ハンドメイド制作情報をお届けします。">
  <Header />
  <main class="pt-20">
    <!-- ヒーローセクション -->
    <section class="py-20 bg-gradient-to-b from-natural-beige/30 to-white">
      <div class="section-padding">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-sans font-black text-natural-brown mb-6">
            お知らせ・更新情報
          </h1>
          <p class="text-xl text-gray-700 leading-relaxed mb-8">
            Wells合同会社の最新情報をお届けします。<br class="hidden md:block" />
            技術・ハンドメイド・事業に関する様々な情報を発信してまいります。
          </p>
          <a
            href={`${baseUrl}news/featured/`}
            class="inline-flex items-center bg-vibrant-orange/10 text-vibrant-orange px-6 py-3 rounded-full hover:bg-vibrant-orange hover:text-white transition-colors font-medium"
          >
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            注目記事を見る
          </a>
        </div>
      </div>
    </section>

    <!-- カテゴリーフィルタ -->
    <section class="py-8 bg-white border-b border-natural-beige">
      <div class="section-padding">
        <div class="max-w-4xl mx-auto">
          <div class="flex flex-wrap justify-center gap-3">
            <button
              data-category="all"
              class="category-filter-btn px-6 py-2 rounded-full font-medium transition-all text-sm md:text-base
                     bg-vibrant-orange text-white shadow-md"
            >
              すべて
            </button>
            <button
              data-category="news"
              class="category-filter-btn px-6 py-2 rounded-full font-medium transition-all text-sm md:text-base
                     bg-natural-beige/50 text-natural-brown hover:bg-natural-green/10 hover:text-natural-green"
            >
              ニュース
            </button>
            <button
              data-category="blog"
              class="category-filter-btn px-6 py-2 rounded-full font-medium transition-all text-sm md:text-base
                     bg-natural-beige/50 text-natural-brown hover:bg-natural-green/10 hover:text-natural-green"
            >
              コラム
            </button>
            <button
              data-category="project"
              class="category-filter-btn px-6 py-2 rounded-full font-medium transition-all text-sm md:text-base
                     bg-natural-beige/50 text-natural-brown hover:bg-natural-green/10 hover:text-natural-green"
            >
              プロジェクト
            </button>
            <button
              data-category="event"
              class="category-filter-btn px-6 py-2 rounded-full font-medium transition-all text-sm md:text-base
                     bg-natural-beige/50 text-natural-brown hover:bg-natural-green/10 hover:text-natural-green"
            >
              イベント
            </button>
            <button
              data-category="update"
              class="category-filter-btn px-6 py-2 rounded-full font-medium transition-all text-sm md:text-base
                     bg-natural-beige/50 text-natural-brown hover:bg-natural-green/10 hover:text-natural-green"
            >
              アップデート
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- ニュース一覧 -->
    <section class="py-20 bg-white">
      <div class="section-padding">
        <div class="max-w-4xl mx-auto">
          {sortedNews.length === 0 ? (
            <div class="text-center py-20">
              <p class="text-gray-600">まだ記事がありません。</p>
            </div>
          ) : (
            <div class="space-y-8" id="news-list">
              {sortedNews.map((entry) => (
                <article
                  class="news-item bg-white rounded-xl p-6 shadow-sm border-l-4 border-vibrant-orange hover:shadow-lg transition-all cursor-pointer"
                  data-category={entry.data.category}
                  data-href={`${baseUrl}news/${entry.slug}/`}
                >
                  <!-- カテゴリとメタ情報 -->
                  <div class="flex flex-wrap items-center gap-4 mb-4">
                    <span class={`inline-block px-3 py-1 rounded-full text-sm font-medium text-white bg-${getCategoryColor(entry.data.category)}`}>
                      {getCategoryLabel(entry.data.category)}
                    </span>
                    <time class="text-sm text-gray-500" datetime={entry.data.date.toISOString()}>
                      {entry.data.date.toLocaleDateString('ja-JP', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                    {entry.data.featured && (
                      <a 
                        href={`${baseUrl}news/featured/`}
                        class="inline-flex items-center px-2 py-1 rounded text-xs font-medium text-vibrant-orange bg-vibrant-orange/10 hover:bg-vibrant-orange/20 transition-colors"
                      >
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                        注目
                      </a>
                    )}
                  </div>

                  <!-- タイトルと説明 -->
                  <h2 class="text-xl md:text-2xl font-bold text-natural-brown mb-3">
                    <a href={`${baseUrl}news/${entry.slug}/`} class="hover:text-vibrant-orange transition-colors">
                      {entry.data.title}
                    </a>
                  </h2>
                  
                  <p class="text-gray-700 mb-4 leading-relaxed">
                    {entry.data.description}
                  </p>

                  <!-- タグ -->
                  {entry.data.tags && entry.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2 mb-4">
                      {entry.data.tags.map((tag) => (
                        <a 
                          href={`${baseUrl}news/tags/${tag}/`}
                          class="bg-natural-beige/50 text-natural-brown px-3 py-1 rounded-full text-sm hover:bg-natural-green/10 hover:text-natural-green transition-colors"
                        >
                          #{tag}
                        </a>
                      ))}
                    </div>
                  )}

                  <!-- 読むリンク -->
                  <div class="text-right">
                    <a 
                      href={`${baseUrl}news/${entry.slug}/`}
                      class="inline-flex items-center text-natural-green hover:text-vibrant-orange transition-colors font-medium"
                    >
                      続きを読む
                      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                  </div>
                </article>
              ))}
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- CTA セクション -->
    <section class="py-20 bg-gradient-to-b from-natural-beige/10 to-white">
      <div class="section-padding text-center">
        <h2 class="text-3xl font-sans font-bold text-natural-brown mb-6">
          最新情報をお見逃しなく
        </h2>
        <p class="text-lg text-gray-700 mb-8 max-w-3xl mx-auto leading-relaxed">
          Wells合同会社の技術・ハンドメイド・事業に関する情報を定期的に更新しています。<br>
          ご質問やご相談がございましたら、お気軽にお問い合わせください。
        </p>
        <a href={`${baseUrl}#contact`} 
           class="inline-block bg-natural-green text-white px-8 py-4 rounded-full hover:bg-vibrant-orange transition-colors font-medium shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all">
          お問い合わせ
        </a>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  article {
    animation: fadeIn 0.8s ease-out forwards;
  }

  article:nth-child(2) {
    animation-delay: 0.1s;
  }

  article:nth-child(3) {
    animation-delay: 0.2s;
  }

  article:nth-child(4) {
    animation-delay: 0.3s;
  }

  /* フィルタされた記事を非表示 */
  .news-item.hidden {
    display: none;
  }
</style>

<script>
  // カード全体クリックで記事ページへ遷移
  document.addEventListener('DOMContentLoaded', () => {
    const newsCards = document.querySelectorAll('.news-item[data-href]');

    newsCards.forEach(card => {
      card.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        // タグやバッジのリンクをクリックした場合は何もしない
        if (target.closest('a')) {
          return;
        }
        const href = card.getAttribute('data-href');
        if (href) {
          window.location.href = href;
        }
      });
    });
  });

  // カテゴリーフィルタ機能
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('.category-filter-btn');
    const newsItems = document.querySelectorAll('.news-item');

    // URLパラメータから初期カテゴリーを取得
    const urlParams = new URLSearchParams(window.location.search);
    const initialCategory = urlParams.get('category') || 'all';

    // 初期フィルタを適用
    if (initialCategory !== 'all') {
      filterByCategory(initialCategory);
      updateActiveButton(initialCategory);
    }

    // ボタンクリックイベント
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const category = button.getAttribute('data-category') || 'all';

        // フィルタを適用
        filterByCategory(category);

        // アクティブボタンを更新
        updateActiveButton(category);

        // URLパラメータを更新（履歴に追加）
        const newUrl = category === 'all'
          ? window.location.pathname
          : `${window.location.pathname}?category=${category}`;
        window.history.pushState({}, '', newUrl);
      });
    });

    // カテゴリーでフィルタリング
    function filterByCategory(category: string) {
      newsItems.forEach(item => {
        if (category === 'all') {
          item.classList.remove('hidden');
        } else {
          const itemCategory = item.getAttribute('data-category');
          if (itemCategory === category) {
            item.classList.remove('hidden');
          } else {
            item.classList.add('hidden');
          }
        }
      });
    }

    // アクティブボタンのスタイル更新
    function updateActiveButton(category: string) {
      filterButtons.forEach(btn => {
        const btnCategory = btn.getAttribute('data-category');
        if (btnCategory === category) {
          // アクティブスタイル
          btn.classList.remove('bg-natural-beige/50', 'text-natural-brown', 'hover:bg-natural-green/10', 'hover:text-natural-green');
          btn.classList.add('bg-vibrant-orange', 'text-white', 'shadow-md');
        } else {
          // 非アクティブスタイル
          btn.classList.remove('bg-vibrant-orange', 'text-white', 'shadow-md');
          btn.classList.add('bg-natural-beige/50', 'text-natural-brown', 'hover:bg-natural-green/10', 'hover:text-natural-green');
        }
      });
    }
  });
</script>