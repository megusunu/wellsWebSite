---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import NewsCard from '../../components/NewsCard.astro';
import { getCollection } from 'astro:content';
import { getBaseUrl, joinPath } from '../../utils/paths';

const baseUrl = getBaseUrl();

// featured: true の記事のみを取得
const featuredEntries = await getCollection('news', ({ data }) => {
  return data.draft !== true && data.featured === true;
});

// 日付順でソート
const sortedEntries = featuredEntries.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Layout title="注目記事 | お知らせ・更新情報" description="Wells合同会社の注目記事・おすすめ記事の一覧です。">
  <Header />
  <main class="pt-20">
    <!-- パンくずナビ -->
    <nav class="py-4 bg-natural-beige/20" aria-label="パンくずナビゲーション">
      <div class="section-padding">
        <ol class="flex items-center space-x-2 text-sm">
          <li><a href={baseUrl} class="text-natural-green hover:text-vibrant-orange transition-colors">ホーム</a></li>
          <li class="text-gray-400">/</li>
          <li><a href={joinPath(baseUrl, 'news')} class="text-natural-green hover:text-vibrant-orange transition-colors">お知らせ・更新情報</a></li>
          <li class="text-gray-400">/</li>
          <li class="text-gray-600">注目記事</li>
        </ol>
      </div>
    </nav>

    <!-- ヘッダー -->
    <header class="py-12 bg-gradient-to-b from-vibrant-orange/10 to-white">
      <div class="section-padding">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-flex items-center bg-vibrant-orange/10 text-vibrant-orange px-4 py-2 rounded-full text-sm font-medium mb-4">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            注目記事
          </div>
          <h1 class="text-3xl md:text-4xl font-sans font-black text-natural-brown mb-4">
            おすすめ記事
          </h1>
          <p class="text-xl text-gray-700">
            特に読んでいただきたい{sortedEntries.length}件の記事をご紹介します
          </p>
        </div>
      </div>
    </header>

    <!-- 記事一覧 -->
    <section class="py-16 bg-white">
      <div class="section-padding">
        <div class="max-w-4xl mx-auto">
          {sortedEntries.length > 0 ? (
            <div class="grid gap-8">
              {sortedEntries.map((entry) => (
                <NewsCard entry={entry} showAuthor={true} />
              ))}
            </div>
          ) : (
            <div class="text-center py-12">
              <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
              </svg>
              <p class="text-gray-500 text-lg mb-8">現在、注目記事はありません。</p>
              <a 
                href={joinPath(baseUrl, 'news')}
                class="inline-block bg-natural-green text-white px-6 py-3 rounded-full hover:bg-vibrant-orange transition-colors font-medium"
              >
                すべての記事を見る
              </a>
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- 他のページへのリンク -->
    <section class="py-12 bg-natural-beige/20">
      <div class="section-padding">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-2xl font-bold text-natural-brown mb-8">
            他の記事も見る
          </h2>
          <div class="flex flex-wrap justify-center gap-4">
            <a 
              href={joinPath(baseUrl, 'news')}
              class="inline-block bg-natural-green text-white px-6 py-3 rounded-full hover:bg-vibrant-orange transition-colors font-medium"
            >
              すべての記事
            </a>
            <a 
              href={joinPath(baseUrl, 'news') + '?category=blog'}
              class="inline-block bg-white text-natural-green px-6 py-3 rounded-full hover:bg-natural-green hover:text-white transition-colors font-medium border border-natural-green"
            >
              コラム記事
            </a>
            <a 
              href={`${baseUrl}#contact`}
              class="inline-block bg-white text-natural-green px-6 py-3 rounded-full hover:bg-natural-green hover:text-white transition-colors font-medium border border-natural-green"
            >
              お問い合わせ
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

