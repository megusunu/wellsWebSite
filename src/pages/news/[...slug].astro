    color: #4b5563;
    line-height: 1.8;
    font-size: 1.125rem;
  }
  
  .markdown-content h1, 
  .markdown-content h2, 
  .markdown-content h3, 
  .markdown-content h4, 
  .markdown-content h5, 
  .markdown-content h6 {
    color: #8D6E63 !important;
    font-weight: 700 !important;
    line-height: 1.4 !important;
    font-family: 'Noto Sans JP', sans-serif !important;
  }
  
  .markdown-content h1 {
    font-size: 2.5rem !important;
    margin-top: 2rem !important;
    margin-bottom: 1.5rem !important;
    border-bottom: 3px solid #7CB342 !important;
    padding-bottom: 0.75rem !important;
  }
  
  .markdown-content h2 {
    border-bottom: 2px solid #7CB342 !important;
    padding-bottom: 0.75rem !important;
    margin-top: 3rem !important;
    margin-bottom: 1.5rem !important;
    font-size: 1.75rem !important;
  }
  
  .markdown-content h2:first-child {
    margin-top: 0;
  }
  
  .markdown-content h3 {
    color: #7CB342 !important;
    margin-top: 2.5rem !important;
    margin-bottom: 1rem !important;
    font-size: 1.5rem !important;
  }
  
  .markdown-content h3:first-child {
    margin-top: 0 !important;
  }
  
  .markdown-content h4 {
    margin-top: 2rem !important;
    margin-bottom: 0.75rem !important;
    font-size: 1.25rem !important;
  }
  
  .markdown-content h4:first-child {
    margin-top: 0 !important;
  }
  
  .markdown-content p {
    margin-top: 0 !important;
    margin-bottom: 1.5rem !important;
    line-height: 1.8 !important;
  }
  
  .markdown-content a {
    color: #7CB342;
    text-decoration: none;
    border-bottom: 1px solid rgba(124, 179, 66, 0.3);
    transition: all 0.2s ease;
  }
  
  .markdown-content a:hover {
    color: #FF7043;
    border-bottom-color: #FF7043;
  }
  
  .markdown-content blockquote {
    border-left: 4px solid #FF7043 !important;
    background: rgba(245, 230, 211, 0.2) !important;
    padding: 1.5rem !important;
    margin: 2rem 0 !important;
    font-style: italic !important;
    line-height: 1.7 !important;
  }
  
  .markdown-content ul, 
  .markdown-content ol {
    margin: 1.5rem 0 !important;
    padding-left: 1.5rem !important;
  }
  
  .markdown-content ul {
    list-style-type: disc !important;
  }
  
  .markdown-content ol {
    list-style-type: decimal !important;
  }
  
  .markdown-content ul ul {
    list-style-type: circle;
    margin: 0.5rem 0;
  }
  
  .markdown-content ol ol {
    list-style-type: lower-alpha;
    margin: 0.5rem 0;
  }
  
  .markdown-content li {
    margin: 0.75rem 0;
    line-height: 1.7;
  }
  
  .markdown-content li p {
    margin: 0.5rem 0;
  }
  
  .markdown-content strong {
    color: #8D6E63;
    font-weight: 600;
  }
  
  .markdown-content code {
    background: rgba(245, 230, 211, 0.5);
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.9em;
    color: #8D6E63;
    border: 1px solid #F5E6D3;
    font-family: 'Courier New', monospace;
  }
  
  .markdown-content pre {
    background: #f3f4f6 !important;
    padding: 1.5rem !important;
    border-radius: 0.75rem !important;
    overflow-x: auto !important;
    margin: 2rem 0 !important;
    line-height: 1.6 !important;
    font-family: 'Courier New', monospace !important;
  }
  
  .markdown-content pre code {
    background: none !important;
    padding: 0 !important;
    border: none !important;
    font-size: 0.875rem !important;
    color: #333 !important;
  }
  
  .markdown-content hr {
    border: none;
    border-top: 2px solid #F5E6D3;
    margin: 3rem 0;
  }
  
  .markdown-content table {
    margin: 2rem 0;
    border-collapse: collapse;
    width: 100%;
  }
  
  .markdown-content th, 
  .markdown-content td {
    border: 1px solid #F5E6D3;
    padding: 0.75rem;
    text-align: left;
  }
  
  .markdown-content th {
